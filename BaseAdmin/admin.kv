#:import utils kivy.utils
#: import Window kivy.core.window.Window



<TextInputPopup>:
    title: "New number of items"
    size_hint: None, None
    size: 300, 200
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'

        Button:
            size_hint_y: .2
            text: "Open Link"
            on_release:
                root.obj.update_changes(root.obj_text)
                root.dismiss()
        Button:
            size_hint_y: .2
            text: "Dismiss"
            on_release: root.dismiss()



<AdminWindow>:
    id: 'main'
    orientation: "vertical"
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#ffffff')
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        BoxLayout:
            id: wid
            size_hint_y: None
            height: 30

            Button:
                id: file_trigger
                text: 'Fetch All'
                size_hint_x: .1
                on_release: root.fectchall()

            Label:
                id: uname
                text: 'Admin Dashboard'
                bold: True
                size_hint_x: .8
                height: 30
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex('#5B2437')
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            spacing: 10

            BoxLayout:
                spacing: 20
                orientation: 'horizontal'
                size_hint_y: .069

                TextInput:
                    size_hint_x: .6
                    id: thetittle
                    hint_text: " Tittle"

                Button:
                    size_hint_x: .4
                    id: crud_search_p
                    text: 'Search By Tittle'
                    on_release: root.search_Tittle()

            BoxLayout:
                spacing: 20
                orientation: 'horizontal'
                size_hint_y:.069

                TextInput:
                    size_hint_x: .6
                    id: thedescription
                    hint_text: " Description key word"

                Button:
                    size_hint_x: .4
                    id: crud_search_p
                    text: 'Search By Description'
                    on_release: root.search_Description()


            BoxLayout:
                id: yourecycleyou
                orientation: 'vertical'

                RecycleView:
                    size_hint_y: .8

                    id: heyrecyclerview
                    viewclass: 'SelectableButton'
                    data: [{'text': str(x)} for x in root.data_items]

                    SelectableRecycleGridLayout:
                        padding: (0, 20)
                        spacing: (0, 50)
                        cols: 4
                        default_size: None, dp(76)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'horizontal'
                        multiselect: True
                        touch_multiselect: True

        Label:
            size_hint_y:  .01



        BoxLayout:
            size_hint_y: None
            height: 30
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#5B2437')
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: footer
            Label:
                text: "System Maintained by Cocab Tech Solutions (0729836000)"